<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_server_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tabs_size"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout android:clickable="true"
        android:id="@+id/ll_back"
        android:layout_width="@dimen/tabs_size"
        android:layout_height="@dimen/tabs_size"
        android:background="@drawable/bg_btn_title">
        <com.hc.library.widget.CompatView
            android:id="@+id/bt_back"
            android:background="@drawable/ll_back_gray"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            app:tint="?attr/colorAccent"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/font_title"
        android:textColor="?attr/colorAccent"/>

    <LinearLayout android:id="@+id/ll_action_contaner"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tabs_size"
        android:layout_alignParentRight="true">
    </LinearLayout>

</RelativeLayout>
